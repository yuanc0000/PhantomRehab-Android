<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="27sp" />

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_btn" />

            <ImageView
                android:id="@+id/volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/volume_float_mute"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/volume"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/volume_float" />

        </RelativeLayout>

        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="34dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="@string/reset_password"
            android:textColor="@color/black"
            android:textSize="27sp" />

        <EditText
            android:id="@+id/enter_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_input"
            android:drawableStart="@drawable/envelope"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="30dp"
            android:drawablePadding="30dp"
            android:ems="10"
            android:fontFamily="@font/raleway"
            android:text=""
            android:hint="@string/enter_email"
            android:paddingStart="26dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColorHint="@color/grey_input"
            android:textSize="22sp"

        />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="230dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            app:backgroundTint="@color/blue_tertiary"
            app:cornerRadius="35dp"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/raleway_semibold"
            android:text="@string/submit" />

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/raleway"
            android:text="@string/sign_in"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </LinearLayout>

</RelativeLayout>


